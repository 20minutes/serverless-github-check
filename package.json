  "devDependencies": {
    "@20minutes/eslint-config": "^2.0.0",
    "@fetch-mock/jest": "^0.2.20",
    "@jest/globals": "^30.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
